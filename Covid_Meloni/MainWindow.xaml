<Window x:Class="Covid_Meloni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Covid_Meloni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00B9FF" Offset="0"/>
                <GradientStop Color="#FF00FFB9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="btn_carica" Content="Carica dati" HorizontalAlignment="Left" Height="51" Margin="38,32,0,0" VerticalAlignment="Top" Width="402" Click="btn_carica_Click"/>
        <Button x:Name="btn_interrompi" Content="Interrompi caricamento" HorizontalAlignment="Left" Height="51" Margin="498,32,0,0" VerticalAlignment="Top" Width="256" Click="btn_interrompi_Click"/>
        <ListBox x:Name="lst_lista" HorizontalAlignment="Left" Height="241" Margin="38,126,0,0" VerticalAlignment="Top" Width="402" SelectionChanged="lst_lista_SelectionChanged"/>
        <TextBox x:Name="txt_dati" HorizontalAlignment="Left" Height="241" Margin="498,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256"/>

    </Grid>
</Window>
